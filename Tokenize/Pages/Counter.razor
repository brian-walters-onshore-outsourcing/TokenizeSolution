    private void IncrementCount()
    {

        if (1000 > currentCount)
        {
            currentCount++;
            OnCurrentChanged?.Invoke (this,currentCount - 1, currentCount);
            GetWidthWithRefresh();
        }


    }

    private void DecrementCount()
    {
        if (0 < currentCount)
        {
            currentCount--;
            OnCurrentChanged?.Invoke (this,currentCount + 1, currentCount);
            GetWidthWithRefresh();
        }



    }

    private void UpCount()
